!!!
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
    %title= " :: #{BLOG_TITLE} :: Administration "
    = tag(:meta, :name => 'description', :content => yield(:description) || BLOG_DESCRIPTION)
    = tag(:meta, :name => 'keywords', :content => BLOG_KEYWORDS)
    = render 'layouts/syntaxhighlighter'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery-1.4.4.min', 'rails', 'admin'
    = javascript_tag do
      var _token = "#{form_authenticity_token}"
  %body
    #container
      = render :partial => 'layouts/header'
      #content
        .messages
          - if flash[:notice]
            #notice= flash[:notice]
          - if flash[:error]
            #error= flash[:error]
            - flash[:error] = nil
        = yield
      #sidebar
        %ul#admin_menu
          %li= link_to 'Posts', admin_posts_path
          %li= link_to 'Comments', admin_comments_path
      #footer
        = BLOG_FOOTER
