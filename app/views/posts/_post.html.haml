.post
  %h2= link_to post.title, post
  %p.author
    Posted on #{post.published_at.strftime("%B %d, %Y at %I:%M %P")}
  .content
    = raw RedCloth.new(post.content).to_html
  .tags
    Tags: #{raw post.tags.empty? ? 'none' : post.tags.map{|tag| link_to(tag.name, tag_posts_path(tag))}.join(' ')}
  .leave_comment
    = link_to "Comment", post_path(post) + '#new_comment'
    \/
    \#{link_to "Comments (#{post.comments.size})", post_path(post) + '#comments'}
