<%= render :partial => 'post', :object => @post %>
<div class="new_comment">
	<% form_for [@commentable, @comment] do |f| %>
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :content %>
		<%= f.text_area :content %>
	</p>
  <p>
    <%= f.submit 'Comment' %>
  </p>
	<% end %>
</div>
<div class="comments">
	<% @comments.each do |comment| %>
	<%= comment.content %>
	<% end %>
</div>
	
