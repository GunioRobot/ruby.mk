  <div class="comment">
    <%= gravatar comment.email, :class => 'avatar' %>
    <p class="author">Posted by <%= comment.name %> on <%= comment.created_at.strftime("%B %d, %Y at %I:%M %P") %></p>
  	<p><%= simple_format comment.content %></p>
		<div>
			<%= link_to 'Edit', edit_admin_comment_path(comment) %>
			<%#= link_to 'Delete', [:admin, comment], :method => :delete, :confirm => 'Are you sure?' %>
		  <%= link_to("Delete", delete_admin_comment_path(comment), :class => "delete") %>
		</div>
  </div>