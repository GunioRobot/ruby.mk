  <div class="comment admin">
	<div class="icons">
	  <%= link_to image_tag('icons/edit.png', :title => 'Edit'), edit_admin_comment_path(comment) %>
	  <%= link_to image_tag('icons/delete.png', :title => 'Delete'), delete_admin_comment_path(comment), :class => "delete" %>
	</div>
    <%= gravatar comment.email, :class => 'avatar' %>
    <p class="author">Posted by <%= comment.name %> on <%= comment.created_at.strftime("%B %d, %Y at %I:%M %P") %></p>
  	<p><%= simple_format comment.content %></p>
  </div>