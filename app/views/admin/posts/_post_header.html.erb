<div class="title">
  <h2><%= link_to post.title, [:admin, post] %></h2>
  <p class="author"><%= post.published_at ? "Published on #{post.published_at.strftime('%B %d, %Y at %I:%M %P')}" : 'Not published yet' %></p>
</div>
<div class="icons">
  <%= link_to image_tag('icons/edit.png', :title => 'Edit'), edit_admin_post_path(post) %>
  <%= link_to image_tag('icons/delete.png', :title => 'Delete'), delete_admin_post_path(post), :class => "delete" %>
</div>
