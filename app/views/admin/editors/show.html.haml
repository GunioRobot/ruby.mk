.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", admin_editors_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_admin_editor_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", admin_editor_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.admin_editor.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @editor.name
      %p
        %b
          = t("activerecord.attributes.admin_editor.email", :default => t("activerecord.labels.email", :default => "Email"))
          \:
        = @editor.email
      %p
        %b
          = t("activerecord.attributes.admin_editor.is_admin", :default => t("activerecord.labels.is_admin", :default => "Is admin"))
          \:
        = @editor.is_admin
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_admin_editor_path(@editor), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), admin_editor_path(@editor), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
